<Window x:Class="HostsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PW Tools" Height="250" Width="350"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="CONNECT">
                <StackPanel Margin="10">
                    <TextBox x:Name="txtIP" Text="Enter IP address..." GotFocus="TxtIP_GotFocus" Margin="5"/>
                    <Button x:Name="btnConnect" Content="CONNECT" Click="BtnConnect_Click" Margin="5"/>
                    <Button x:Name="btnAWS" Content="AWS" Click="BtnAWS_Click" Margin="5"/>
                    <Button x:Name="btnLocalhost" Content="LOCALHOST" Click="BtnLocalhost_Click" Margin="5"/>
                    <Button x:Name="btnDisconnect" Content="DISCONNECT" Click="BtnDisconnect_Click" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="REGISTRY">
                <StackPanel Margin="10">
                    <Button x:Name="btnModifyRegistry" Content="Generate Random PW Cognito" Click="BtnModifyRegistry_Click" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="INFO">
                <StackPanel Margin="10">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                        PW Tools by Airbronze.
                        <LineBreak />
                        <LineBreak />
                        My socials:
                        <LineBreak />
                        @airbronze on Discord.
                        <LineBreak />
                        @airbronze on YouTube
                        <LineBreak />
                        Open Source is on GitHub: @Airbronze
                        <LineBreak />
                        <LineBreak />
                        discord.gg/projectreboot
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
